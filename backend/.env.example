# OpenAlgo Flow Backend Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# DEBUG MODE
# =============================================================================
# Set to true for development, false for production
DEBUG=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# FastAPI server host and port
HOST=127.0.0.1
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database URL (default location: ./openalgo_flow.db)
DATABASE_URL=sqlite+aiosqlite:///./openalgo_flow.db

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Allowed CORS origins (comma-separated for multiple origins)
# CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# The base URL for webhook endpoints (used to generate webhook URLs)
# This should be the publicly accessible URL of your backend server
WEBHOOK_HOST_URL=http://127.0.0.1:8000
